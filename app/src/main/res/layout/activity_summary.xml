<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watch_view_stub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rectLayout="@layout/rect_activity_summary"
    app:roundLayout="@layout/round_activity_summary"
    tools:context="nyp.edu.sg.pamatewear.SummaryActivity"
    tools:deviceIds="wear">

    <com.hookedonplay.decoviewlib.DecoView
        android:id="@+id/dvSummaryOfExercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dv_lineWidth="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/percentage_value"
            android:textSize="40sp" />
    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>
